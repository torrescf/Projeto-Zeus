{
    "name": "zeus-system",
    "version": "1.0.0",
    "description": "Sistema interno para gestão de membros, clientes, equipamentos e penalidades.",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
        "build": "tsc --listFiles",
        "start": "npm run build && node dist/index.js",
        "lint": "eslint . --ext .ts --fix",
        "format": "prettier --write src/**/*.ts",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm migration:generate src/migrations/$npm_config_name -d src/config/data-source.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
        "migration:revert": "npm run typeorm migration:revert -d src/config/data-source.ts",
        "db:migrate": "typeorm-ts-node-commonjs migration:run -d \"src/config/data-source.ts\"",
        "stop:dev": "kill-port 4001",
        "test": "jest --runInBand --detectOpenHandles --forceExit",
        "test:watch": "jest --watch --runInBand",
        "test:cov": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/torrescf/PROJETO-ZEUS.git"
    },
    "keywords": [
        "comp-junior",
        "management-system",
        "nodejs",
        "typeorm"
    ],
    "author": "João Pedro Oliveira",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/torrescf/PROJETO-ZEUS/issues"
    },
    "homepage": "https://github.com/torrescf/PROJETO-ZEUS#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^2.2.0",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.21.2",
        "express-rate-limit": "^5.1.3",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.2",
        "newrelic": "^12.18.2",
        "nodemailer": "^6.10.1",
        "pg": "^8.11.3",
        "postgresql-client": "^2.13.0",
        "reflect-metadata": "^0.1.13",
        "ts-jest": "^29.3.2",
        "typeorm": "^0.3.20",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@sentry/node": "^9.15.0",
        "@sentry/tracing": "^7.120.3",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.17",
        "@types/express-rate-limit": "^5.1.3",
        "@types/helmet": "^0.0.48",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/multer": "^1.4.12",
        "@types/newrelic": "^9.14.8",
        "@types/node": "^20.5.7",
        "@types/nodemailer": "^6.4.17",
        "@types/supertest": "^2.0.16",
        "@types/winston": "^2.4.4",
        "@types/winston-loggly-bulk": "^3.0.6",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.47.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.2",
        "supertest": "^6.3.4",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
