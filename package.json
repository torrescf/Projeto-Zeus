{
    "name": "zeus-system",
    "version": "1.0.0",
    "description": "Sistema interno da Comp Júnior para gestão de membros, penalidades, equipamentos, projetos e clientes",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "npm run build && NODE_OPTIONS='' node dist/index.js",
        "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
        "test": "jest",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm migration:generate src/migrations/$npm_config_name -d src/data-source.ts",
        "migration:run": "npm run typeorm migration:run -d src/data-source.ts",
        "migration:revert": "npm run typeorm migration:revert -d src/data-source.ts",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write src/**/*.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/torrescf/PROJETO-ZEUS/zeus-system.git"
    },
    "keywords": [
        "comp-junior",
        "management-system",
        "nodejs",
        "typeorm"
    ],
    "author": "João Pedro Oliveira",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/torrescf/PROJETO-ZEUS/issues"
    },
    "homepage": "https://github.com/torrescf/PROJETO-ZEUS",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.17"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.5",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": ".spec.ts$",
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    }
}
