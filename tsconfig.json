{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs", // Ensure CommonJS is used
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true, // Necessário para TypeORM
    "emitDecoratorMetadata": true, // Necessário para TypeORM
    "strictPropertyInitialization": false,
    "baseUrl": "./", // Certifique-se de que a base é a raiz do projeto
    "paths": {
      "@config/*": ["src/config/*"], // Certifique-se de que aponta para src/config
      "@entities/*": ["src/entities/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}